# PicZFlip Web Application Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Configuration (Get from Firebase Console - Project Settings)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Application Settings
VITE_APP_NAME=PicZFlip
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:5001
VITE_FUNCTIONS_REGION=us-central1

# Feature Flags
VITE_ENABLE_COMMUNITY_FEATURES=true
VITE_ENABLE_PLATFORM_LISTINGS=true
VITE_ENABLE_DEBUG_MODE=true

# Community Features
VITE_DEFAULT_SEARCH_RADIUS=25
VITE_MAX_IMAGE_SIZE_MB=10

# Analytics (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_GOOGLE_ANALYTICS_ID=